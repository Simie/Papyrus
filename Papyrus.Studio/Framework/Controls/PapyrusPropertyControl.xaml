<UserControl x:Name="Root" x:Class="Papyrus.Studio.Framework.Controls.PapyrusPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:pt="http://propertytools.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <pt:PropertyControl x:Name="propControl" UseTabs="False" SelectedObject="{Binding SelectedObject, ElementName=Root}" Padding="5"></pt:PropertyControl>
</UserControl>
